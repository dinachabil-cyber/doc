{% extends 'base.html.twig' %}

{% block title %}Create Account - DocManager
{% endblock %}

{% block auth_body %}
	<div class="auth-card">
		<div class="auth-header">
			<div class="auth-icon">✨</div>
			<h1 class="auth-title">Create your account</h1>
			<p class="auth-subtitle">Get started with DocManager today</p>
		</div>

		{{ form_start(registrationForm) }}
		<div class="form-group">
			{{ form_label(registrationForm.email, 'Email address') }}
			{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'you@example.com'}}) }}
			{{ form_errors(registrationForm.email) }}
		</div>

		<div class="form-group">
			{{ form_label(registrationForm.plainPassword, 'Password') }}
			{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
			{{ form_errors(registrationForm.plainPassword) }}
		</div>

		<div class="form-group">
			<label class="form-check">
				{{ form_widget(registrationForm.agreeTerms) }}
				<span>I agree to the terms and conditions</span>
			</label>
			{{ form_errors(registrationForm.agreeTerms) }}
		</div>

		<button type="submit" class="btn btn-primary btn-lg btn-block">Create Account</button>
		{{ form_end(registrationForm) }}

		<div class="auth-footer">
			Already have an account?
			<a href="{{ path('app_login') }}">Sign in</a>
		</div>
	</div>
{% endblock %}
