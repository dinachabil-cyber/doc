{% extends 'base.html.twig' %}

{% block title %}
	{{ client.firstName }}
	{{ client.lastName }}
	- DocManager
{% endblock %}

{% block body %}
	<div class="page-header">
		<h1>ğŸ‘¤
			{{ client.firstName }}
			{{ client.lastName }}</h1>
		<div class="page-header-actions">
			<a href="{{ path('app_client_edit', {id: client.id}) }}" class="btn btn-secondary">âœï¸ Edit</a>
			<a href="{{ path('app_document_new', {id: client.id}) }}" class="btn btn-primary">ğŸ“„ Upload Document</a>
			<a href="{{ path('app_client_index') }}" class="btn btn-secondary">â† Back</a>
		</div>
	</div>

	<div class="stats-row">
		<div class="stat-card">
			<div class="stat-value">{{ client.documents|length }}</div>
			<div class="stat-label">Documents</div>
		</div>
		<div class="stat-card">
			<div class="stat-value">{{ client.createdAt|date('d/m') }}</div>
			<div class="stat-label">Since</div>
		</div>
	</div>

	<div class="card">
		<h2 style="margin-bottom: 1rem;">Client Details</h2>
		<dl class="detail-list">
			<dt>First Name</dt>
			<dd>{{ client.firstName }}</dd>

			<dt>Last Name</dt>
			<dd>{{ client.lastName }}</dd>

			<dt>Email</dt>
			<dd>
				{% if client.email %}
					<a href="mailto:{{ client.email }}">{{ client.email }}</a>
				{% else %}
					<span style="color:#94a3b8">Not provided</span>
				{% endif %}
			</dd>

			<dt>Phone</dt>
			<dd>
				{% if client.phone %}
					<a href="tel:{{ client.phone }}">{{ client.phone }}</a>
				{% else %}
					<span style="color:#94a3b8">Not provided</span>
				{% endif %}
			</dd>

			<dt>Address</dt>
			<dd>{{ client.address ?? '<span style="color:#94a3b8">Not provided</span>'|raw }}</dd>

			<dt>Created</dt>
			<dd>{{ client.createdAt|date('d/m/Y H:i') }}</dd>
		</dl>
	</div>

	<div class="page-header" style="margin-top: 2rem;">
		<h2>ğŸ“„ Documents ({{ client.documents|length }})</h2>
		<div class="page-header-actions">
			<a href="{{ path('app_document_new', {id: client.id}) }}" class="btn btn-primary btn-sm">+ Upload</a>
		</div>
	</div>

	{% if client.documents is empty %}
		<div class="card">
			<div class="empty-state">
				<div class="empty-state-icon">ğŸ“‚</div>
				<h3>No documents yet</h3>
				<p>Upload the first document for this client.</p>
				<a href="{{ path('app_document_new', {id: client.id}) }}" class="btn btn-primary">+ Upload Document</a>
			</div>
		</div>
	{% else %}
		<div class="table-wrapper">
			<div class="table-responsive">
				<table>
					<thead>
						<tr>
							<th>Title</th>
							<th>File</th>
							<th>Size</th>
							<th>Uploaded</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for doc in client.documents %}
							<tr>
								<td>
									<a href="{{ path('app_document_show', {id: doc.id}) }}" style="font-weight:600;">{{ doc.title }}</a>
								</td>
								<td style="color:#64748b; font-size:0.85rem;">{{ doc.originalName ?? doc.fileName ?? 'â€”' }}</td>
								<td>
									{% if doc.size %}
										{{ (doc.size / 1024)|number_format(1) }}
										KB
									{% else %}
										<span style="color:#94a3b8">â€”</span>
									{% endif %}
								</td>
								<td style="color:#64748b; font-size:0.85rem;">{{ doc.createdAt|date('d/m/Y') }}</td>
								<td>
									<div style="display:flex; gap:0.35rem; flex-wrap:wrap;">
										<a href="{{ path('app_document_download', {id: doc.id}) }}" class="btn btn-success btn-sm">â¬‡ Download</a>
										<form method="post" action="{{ path('app_document_delete', {id: doc.id}) }}" class="inline-form" onsubmit="return confirm('Delete this document?');">
											<input type="hidden" name="_token" value="{{ csrf_token('delete-document-' ~ doc.id) }}">
											<button type="submit" class="btn btn-danger btn-sm">ğŸ—‘ Delete</button>
										</form>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	{% endif %}

	<div style="margin-top: 2.5rem; padding-top: 1.5rem; border-top: 1px solid #e2e8f0;">
		<form method="post" action="{{ path('app_client_delete', {id: client.id}) }}" onsubmit="return confirm('Are you sure you want to delete this client and ALL their documents? This cannot be undone.');">
			<input type="hidden" name="_token" value="{{ csrf_token('delete-client-' ~ client.id) }}">
			<button type="submit" class="btn btn-danger">ğŸ—‘ Delete Client</button>
		</form>
	</div>
{% endblock %}
