{% extends 'base.html.twig' %}

{% block title %}Sign In - DocManager
{% endblock %}

{% block auth_body %}
	<div class="auth-card">
		<div class="auth-header">
			<div class="auth-icon">üîê</div>
			<h1 class="auth-title">Welcome back</h1>
			<p class="auth-subtitle">Sign in to your DocManager account</p>
		</div>

		{% if error %}
			<div class="flash flash-error">‚ö†Ô∏è
				{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="flash flash-cyan">You are logged in as
				<strong>{{ app.user.userIdentifier }}</strong>.
				<a href="{{ logout_path() }}">Logout</a>
			</div>
		{% else %}
			<form method="post">
				<div class="form-group">
					<label class="form-label" for="inputEmail">Email address</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="you@example.com">
				</div>

				<div class="form-group">
					<label class="form-label" for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="form-group">
					<label class="form-check">
						<input type="checkbox" name="_remember_me">
						<span>Remember me for 7 days</span>
					</label>
				</div>

				<button class="btn btn-primary btn-lg btn-block" type="submit">Sign In</button>
			</form>

			<div class="auth-footer">
				Don't have an account?
				<a href="{{ path('app_register') }}">Create one</a>
			</div>
		{% endif %}
	</div>
{% endblock %}
