{% extends 'base.html.twig' %}

{% block title %}New Category - DocManager
{% endblock %}

{% block body %}
	<div class="page-header">
		<div>
			<h1 class="page-title">ğŸ·ï¸ New Category</h1>
			<p class="page-subtitle">Create a new document category</p>
		</div>
		<div class="page-actions">
			<a href="{{ path('app_category_index') }}" class="btn btn-secondary">â† Back</a>
		</div>
	</div>

	<div class="card">
		<div class="card-body">
			{{ form_start(form, {attr: {class: 'form-horizontal'}}) }}

			<div class="form-group">
				{{ form_label(form.name) }}
				{{ form_widget(form.name, {attr: {class: 'form-control', placeholder: 'Enter category name'}}) }}
				{{ form_errors(form.name) }}
			</div>

			<div class="form-group">
				{{ form_label(form.slug) }}
				{{ form_widget(form.slug, {attr: {class: 'form-control', placeholder: 'category-slug'}}) }}
				{{ form_errors(form.slug) }}
				<span class="form-help">Leave empty to auto-generate from name</span>
			</div>

			<div class="form-actions">
				<button type="submit" class="btn btn-primary">ğŸ’¾ Create Category</button>
				<a href="{{ path('app_category_index') }}" class="btn btn-secondary">Cancel</a>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
